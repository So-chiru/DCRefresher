{
  "name": "DC Refresher",
  "short_name": "디씨 Refresher",
  "manifest_version": 2,
  "permissions": [
    "https://dccon.dcinside.com/*",
    "https://gall.dcinside.com/*",
    "webRequest",
    "webRequestBlocking",
    "storage"
  ],
  "content_scripts": [
    {
      "js": ["refresher.bundle.js"],
      "run_at": "document_start",
      "css": ["refresher.bundle.css"],
      "matches": ["https://gall.dcinside.com/*"]
    }
  ],
  "icons": {
    "128": "icon_128.png",
    "300": "icon_300.png"
  },
  "browser_action": {
    "default_popup": "popup/ppup.html",
    "default_icon": {
      "128": "icon_128.png",
      "300": "icon_300.png"
    },
    "default_title": "DC Refresher"
  },
  "options_ui": {
    "chrome_style": true,
    "page": "popup/options.html"
  },
  "web_accessible_resources": ["icns/*", "popup/*"],
  "applications": {
    "gecko": {
      "id": "dcrefresher@sochiru.pw"
    }
  }
}
