html(style='width:100%;height:100%;margin:0;padding:0;overflow-x:hidden;')
    head
        title DC콘 선택
        meta(http-equiv="Content-Type" content="text/html;charset=UTF-8")
        meta(name="viewport" content="width=device-width, initial-scale=1.0")
        link(rel="stylesheet" href="../refresher.bundle.css")
        script(src="../dccon.bundle.js")
        style(type="text/css").
            * {
                font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', 'Noto Sans CJK KR',
                Roboto, Oxygen, Ubuntu, Cantarell, 'Open Sans', 'Helvetica Neue', sans-serif;
            }

            .dccon {
                transition: box-shadow 0.2s;
                width: calc(33% - 20px);
                float: left;
                cursor: pointer;
                margin: 10px;
                border-radius: 10px;
            }

            .dccon:hover {
                transition: box-shadow 0.2s;
                box-shadow: 0 4px 8px 0 rgba(0, 0, 0, 0.4);
            }

            .menu {
                transition: box-shadow 0.2s;
                margin-top: 10px;
                float: left;
                cursor: pointer;
                width: 100%;
                border-radius: 10px;
            }

            .menu:hover {
                transition: box-shadow 0.2s;
                box-shadow: 0 4px 8px 0 rgba(0, 0, 0, 0.4);
            }

            .menu img {
                float: left;
                height: 100px;
                margin-right: 20px;
                border-radius: 10px;
            }

            .menu div {
                float: left;
                margin-top: 5px;
            }

            ::-webkit-scrollbar {
                width: 10px;
            }

            ::-webkit-scrollbar-track {
                background: #f1f1f1;
            }

            ::-webkit-scrollbar-thumb {
                background: #888;
            }

            ::-webkit-scrollbar-thumb:hover {
                background: #555;
            }
    body(style='width:100%;height:100%;margin:0;padding:0;')
        div(style='width:100%;position:fixed;top:0;background:rgba(255,255,255,0.7);backdrop-filter: blur(5px) saturate(150%);')
            input(type='text' placeholder='검색할 이름을 입력하세요.' style='width:calc(100% - 85px);margin:5px;padding:4px;background:transparent' id='title' name='dccon')
            button(id='search' style="position: absolute;right: 5px;top: 5px;background: #00000033;border: none;padding: 5px 10px;width:55px;") 검색
        div(style='width:calc(100% - 40px);margin-top:20px;padding:20px;' id='main')

