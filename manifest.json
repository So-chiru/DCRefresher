{
  "name": "DC Refresher",
  "short_name": "디씨 Refresher",
  "description": "DC 페이지를 자동으로 고치고, 미리 보기를 생성합니다.",
  "version": "1.0.3.2",
  "manifest_version": 2,
  "permissions": [
    "https://gall.dcinside.com/*",
    "webRequest",
    "webRequestBlocking",
    "storage"
  ],
  "content_scripts": [
    {
      "js": ["dc_refresh.js"],
      "run_at": "document_start",
      "css": ["dc_refresh.css"],
      "matches": ["https://gall.dcinside.com/*"]
    }
  ],
  "browser_action": {
    "default_popup": "popup/ppup.html",
    "default_icon": {
      "128": "icns/dc_ref_128.png",
      "300": "icns/dc_ref.png"
    },
    "default_title": "DC Refresher"
  },
  "options_page": "popup/options.html",
  "options_ui": {
    "chrome_style": true,
    "page": "popup/options.html"
  },
  "web_accessible_resources": ["icns/*", "popup/*"]
}
